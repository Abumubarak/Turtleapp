<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:id="@+id/repp.png">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardCornerRadius="8dp"
               app:cardBackgroundColor="#FFDD00"
                android:elevation="24dp"
                android:layout_marginTop="130dp"
                android:layout_height="1500dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/reports"
                    android:id="@+id/imageView"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:text="Breadth:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="60dp"
                    android:textColor="#0E3B43" />

                <TextView
                    android:text="Depth:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="60dp"
                    android:textColor="#0E3B43" />

                <TextView
                    android:text="Length :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="60dp"
                    android:textColor="#0E3B43" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cast_ic_mini_controller_play_large"
                    android:id="@+id/imageView5"
                    android:layout_marginTop="200dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cast_ic_mini_controller_play_large"
                    android:id="@+id/imageView6"
                    android:layout_marginTop="250dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cast_ic_mini_controller_play_large"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="140dp"
                    android:backgroundTint="@android:color/background_light" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:layout_marginTop="280dp"
                    android:hint="type here- in centimeters"
                    android:textSize="14sp"
                    android:layout_marginLeft="65dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow"
                    android:id="@+id/imageView7"
                    android:layout_marginTop="333dp"
                    android:layout_marginLeft="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:layout_marginTop="220dp"
                    android:textSize="14sp"
                    android:hint="type here- in centimeter"
                    android:layout_marginLeft="65dp" />

                <TextView
                    android:text="Give a suitable title for the nest:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="330dp"
                    android:textColor="#0E3B43" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_marginTop="160dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="65dp"
                    android:hint="type here- in centimeteres" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageView8"
                    android:layout_marginTop="413dp"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:text="Team Leader:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="405dp"
                    android:textColor="#0E3B43" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="350dp"
                    android:hint="text here" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText5"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="422dp"
                    android:hint="name goes here" />

                <TextView
                    android:text="Number of eggs:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="478dp"
                    android:textColor="#0E3B43" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText6"
                    android:layout_marginTop="500dp"
                    android:layout_marginLeft="72dp"
                    android:hint="type the count" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/egg"
                    android:id="@+id/imageView9"
                    android:layout_marginTop="485dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:text="Report a nest:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="150dp"
                    android:textSize="24sp"
                    android:layout_marginTop="30dp"
                    android:textColor="#69626D"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

                <TextView
                    android:text="Upload an Image:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="22sp"
                    android:textColor="#0E3B43" />
                <pl.droidsonroids.gif.GifTextView
                    android:background="@drawable/cameras"
                    android:id="@+id/gifcam"
                    android:layout_marginTop="600dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="300dp" />

                <TextView
                    android:text="Hit on the Running Egg to submit the Report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_marginTop="940dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#0E3B43" />

                <pl.droidsonroids.gif.GifTextView
                    android:background="@drawable/egggif"
                    android:id="@+id/gif"
                    android:layout_marginTop="970dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="400dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_upload"
                    android:id="@+id/imageView10"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="10dp" />


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>